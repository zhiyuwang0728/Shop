<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_130"
        android:background="#555252"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_o"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:text="我的"
            android:textColor="@color/bg_white"
            android:textSize="@dimen/dp_14" />

        <RelativeLayout
            android:id="@+id/layout_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20">

            <ImageView
                android:id="@+id/img_head"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@mipmap/nn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/img_head"
                android:text="点击登录"
                android:textColor="@color/bg_white"
                android:textSize="@dimen/dp_14" />


            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@mipmap/ic_own_back" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_320"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_din"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_weight="1"
                android:background="@drawable/shape_txt_border_black"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_8">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:src="@mipmap/ic_order" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="我的订单"
                    android:textColor="@color/bg_black"
                    android:textSize="@dimen/dp_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_you"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_weight="1"
                android:background="@drawable/shape_txt_border_black"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_8">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:src="@mipmap/ic_coupon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="优惠卷"
                    android:textColor="@color/bg_black"
                    android:textSize="@dimen/dp_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_li"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_weight="1"
                android:background="@drawable/shape_txt_border_black"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_8">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:src="@mipmap/ic_own_collect" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="我的订单"
                    android:textColor="@color/bg_black"
                    android:textSize="@dimen/dp_14" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_own"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_weight="1"
                android:background="@drawable/shape_txt_border_black"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_8">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:src="@mipmap/ic_location" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="我的收藏"
                    android:textColor="@color/bg_black"
                    android:textSize="@dimen/dp_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_zu"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_weight="1"
                android:background="@drawable/shape_txt_border_black"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_8">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:src="@mipmap/ic_dui" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="我的足迹"
                    android:textColor="@color/bg_black"
                    android:textSize="@dimen/dp_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_hui"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_weight="1"
                android:background="@drawable/shape_txt_border_black"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_8">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:src="@mipmap/ic_xiao" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="会员福利"
                    android:textColor="@color/bg_black"
                    android:textSize="@dimen/dp_14" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_location"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_weight="1"
                android:background="@drawable/shape_txt_border_black"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_8">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:src="@mipmap/ic_location" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="地址管理"
                    android:textColor="@color/bg_black"
                    android:textSize="@dimen/dp_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_zhang"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_weight="1"
                android:background="@drawable/shape_txt_border_black"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_8">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:src="@mipmap/ic_dui" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="账号安全"
                    android:textColor="@color/bg_black"
                    android:textSize="@dimen/dp_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_lian"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_weight="1"
                android:background="@drawable/shape_txt_border_black"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_8">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:src="@mipmap/ic_xiao" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="联系客服"
                    android:textColor="@color/bg_black"
                    android:textSize="@dimen/dp_14" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_bang"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_weight="1"
                android:background="@drawable/shape_txt_border_black"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_8">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:src="@mipmap/ic_wen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="帮助中心"
                    android:textColor="@color/bg_black"
                    android:textSize="@dimen/dp_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_yi"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_weight="1"
                android:background="@drawable/shape_txt_border_black"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_8">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:src="@mipmap/ic_yi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="意见反馈"
                    android:textColor="@color/bg_black"
                    android:textSize="@dimen/dp_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_tui"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_weight="1"
                android:background="@drawable/shape_txt_border_black"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_8">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:src="@mipmap/ic_yi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="退出登录"
                    android:textColor="@color/bg_black"
                    android:textSize="@dimen/dp_14" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>