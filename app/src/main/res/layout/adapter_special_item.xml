<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5">

    <ImageView
        android:id="@+id/img_topic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/txt_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14123"
        android:textColor="@color/bg_black"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toTopOf="@id/txt_des"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123165"
        android:textColor="#E80E0E"
        android:layout_marginLeft="@dimen/dp_8"
        android:textSize="@dimen/sp_10"
        app:layout_constraintBottom_toTopOf="@id/txt_des"
        app:layout_constraintLeft_toRightOf="@id/txt_name"/>

    <TextView
        android:id="@+id/txt_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="456123456123"
        android:maxLines="1"
        android:layout_marginTop="@dimen/dp_5"
        android:textSize="@dimen/sp_8"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>